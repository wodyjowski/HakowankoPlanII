<Window x:Class="HakowankoPlanII.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HakowankoPlanII"
        mc:Ignorable="d"
        Title="xd" Height="450" Width="800" Background="#FFC5C5C5" MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="QueryText" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" ScrollViewer.CanContentScroll="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Background="#FFC5C5C5" Margin="0,23,0,40"/>
        <Button Content="Get Data" Margin="0,0,10,10" RenderTransformOrigin="-0.072,0.392" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" Click="Button_Click"/>
        <TextBox x:Name="InputQuery" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Text="SELECT table_name FROM information_schema.tables"/>
        <Label x:Name="StatusText" Content="Ready" Margin="10,0,0,9" HorizontalAlignment="Left" Width="177" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
